<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.intros.SlideActivity">

    <ImageView
        android:importantForAccessibility="no"
        android:id="@+id/imageIntro3"
        android:layout_width="@dimen/default_size_300_dp"
        android:layout_height="@dimen/default_size_300_dp"
        android:layout_marginTop="@dimen/default_size_125_dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/intro_03" />

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_size_24_dp"
        android:layout_marginEnd="@dimen/default_size_24_dp"
        android:shadowColor="@color/black"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="8"
        android:text="@string/intro_text3"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/default_text_24_sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageIntro3" />

    <Button
        android:importantForAccessibility="yes"
        android:id="@+id/btn_start"
        android:layout_width="@dimen/default_size_0_dp"
        android:layout_height="wrap_content"
        android:padding="@dimen/default_size_10_dp"
        android:layout_marginStart="@dimen/default_size_24_dp"
        android:layout_marginTop="@dimen/default_size_16_dp"
        android:layout_marginEnd="@dimen/default_size_24_dp"
        android:backgroundTint="@color/black"
        android:contentDescription="@string/intro_button_description"
        android:onClick="openNextActivity"
        android:shadowColor="@color/black"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="2"
        android:text="@string/intro_button"
        android:textColor="@color/white"
        android:textSize="@dimen/default_text_24_sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_title" />


</androidx.constraintlayout.widget.ConstraintLayout>
